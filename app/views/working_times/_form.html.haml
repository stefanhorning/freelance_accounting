= form_for @working_time do |f|
  .control-group
    = f.label :customer_id, :class => 'control-label'
    .controls
      = f.collection_select(:customer_id, Customer.all, :id, :name)
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :from, :class => 'control-label'
    .controls
      %div{id: "datepicker_from", class: "input-append date"}
        = f.text_field :from, :class => 'text_field', :type => 'text', 'data-format' => "dd.MM.yyyy hh:mm:ss"
        %span.add-on
          %i{"data-time-icon" => "icon-time", "data-date-icon" => "icon-calendar"}
  .control-group
    = f.label :to, :class => 'control-label'
    .controls
      %div{id: "datepicker_to", class: "input-append date"}
        = f.text_field :to, :class => 'text_field', :type => 'text', 'data-format' => "dd.MM.yyyy hh:mm:ss"
        %span.add-on
          %i{"data-time-icon" => "icon-time", "data-date-icon" => "icon-calendar"}
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      working_times_path, :class => 'btn'                          |

