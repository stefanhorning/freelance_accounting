= form_for @bill, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :time_amount, :class => 'control-label'
    .controls
      = f.text_field :time_amount, :class => 'text_field'
  .control-group
    = f.label :price_amount, :class => 'control-label'
    .controls
      = f.text_field :price_amount, :class => 'text_field'
  .control-group
    = f.label :customer_id, :class => 'control-label'
    .controls
      = f.collection_select(:customer_id, Customer.all, :id, :name)
  .control-group
    = f.label :paid, :class => 'control-label'
    .controls
      = f.check_box :paid, :class => 'checkbox'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), bills_path, :class => 'btn'
