- model_class = Customer
%table.table.table-striped
  %thead
    %tr
      %th= sortable "name"
  %tbody
    - @customers.each do |customer|
      %tr
        %td= link_to customer.name, customer_path(customer)
        %td
          = edit_button(customer, 'btn-mini') if can? :edit, customer
          -#
          = delete_button(customer, 'btn-mini') if can? :delete, customer
%br
= will_paginate @customers
